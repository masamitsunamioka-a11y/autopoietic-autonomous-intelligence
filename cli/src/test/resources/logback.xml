<configuration>
    <timestamp key="bySecond" datePattern="yyyyMMddHHmmss"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/test_${bySecond}.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="xxxxx.yyyyy.zzzzz.autopoietic.autonomous.intelligence" level="DEBUG"/>
    <logger name="xxxxx.yyyyy.zzzzz.autopoietic.autonomous.intelligence.runtime.impl.GeminiClient" level="TRACE"/>
    <logger name="org.apache.http" level="WARN"/>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
